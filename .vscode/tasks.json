{

    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build Docker Image",
            "type": "shell",
            "command": "docker-compose -f ./docker/production.yaml build "
        },
        {
            "label": "Docker Compose Up Production",
            "type": "shell",
            "command": "docker-compose -f ./docker/production.yaml up "
        },
        {
            "label": "Docker Swarm Stack Production",
            "type": "shell",
            "command": "docker stack deploy --compose-file ./docker/production.yaml myufms-swarm"
        },
        {
            "label": "Docker Swarm Remove Services",
            "type": "shell",
            "command": "docker stack rm myufms-swarm"
        }
    ]
}